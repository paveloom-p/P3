module poly
contains

!-----------

subroutine poly1(n,x,m)
implicit none
integer n, i, x
real y
real,dimension(100)::m

y=m(1)
do i=1, n, 1
y=y*x+m(i+1)
enddo

write(*,*) 'Poly1: '
write(*,*) 'Значение многочлена в этой точке: ', y

end subroutine poly1

!-----------

subroutine poly2(n,x,m)
implicit none
integer n, i, x, a, b
real y, y2, y4, yn4
real,dimension(:)::m

if (mod(n,2) .eq. 1) then
a=n
b=n-1
else
a=n-1
b=n
end if

!нечетные
yn4=m(2)*x
do i=1, a, 1
yn4=yn4*(x**2)+m(i+2)
enddo

!четные
y4=m(1)
do i=1, b, 1
y4=y4*(x**2)+m(i+2)
enddo

y=y4+yn4
y2=y4-yn4

write(*,*) 'Poly2: '
write(*,*) 'Значение многочлена в этой точке: ', y
write(*,*) 'Значение многочлена в точке, отрицательной введенной: ', y2

end subroutine poly2

!-----------

end module poly
